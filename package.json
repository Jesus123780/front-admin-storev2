{
  "name": "nextjs_approuter_electron",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://saybackend.com",
  "author": {
    "name": "spa5k",
    "email": "admin@saybackend.com",
    "url": "https://saybackend.com"
  },
  "main": "build/main.js",
  "description": "NextJS App with Electron",
  "scripts": {
    "next:dev": "next dev",
    "next:build": "next build",
    "next:start": "next start",
    "next:lint": "next lint",
    "format": "dprint fmt",
    "postinstall": "electron-builder install-app-deps",
    "electron:dist": "electron-builder --dir",
    "electron:dist:deb": "electron-builder --linux deb",
    "build": "run-s next:build electron:build",
    "electron:build": "electron-builder",
    "dist": "run-s build electron:dist",
    "prebuild:backend": "node electron/src/build-backend.js",
    "dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev -p 3000\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build_watch": "tsup --watch",
    "electron:dev": "cross-env NODE_ENV='development' electron .",
    "electron:watch": "cross-env NODE_ENV='development' nodemon"
  },
  "dependencies": {
    "@apollo/client": "^3.13.5",
    "@electron-toolkit/utils": "^3.0.0",
    "@electron/remote": "2.1.2",
    "@fingerprintjs/fingerprintjs": "^4.6.1",
    "@next/env": "^14.2.5",
    "apollo-upload-client": "^17.0.0",
    "cross-env": "^7.0.3",
    "css-mediaquery": "^0.1.2",
    "deepmerge": "^4.3.1",
    "dotenv": "^16.5.0",
    "electron-log": "^5.3.4",
    "get-port-please": "^3.1.2",
    "google-auth-library": "9.15.1",
    "jsonwebtoken": "^9.0.1",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "next": "^15.2.4",
    "next-auth": "^4.24.11",
    "npm-pkg-hook": "^1.11.3",
    "pg": "8.14.1",
    "pkg-components": "^2.0.80",
    "qr.js": "^0.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-grid-layout": "^1.5.1",
    "sharp": "^0.33.4",
    "styled-components": "^5.3.11",
    "subscriptions-transport-ws": "^0.11.0"
  },
  "devDependencies": {
    "@types/node": "^22.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "concurrently": "9.1.2",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.5.7",
    "eslint-config-next": "14.2.5",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.7",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "wait-on": "8.0.3"
  },
  "build": {
    "asar": true,
    "executableName": "NextJSElectronJ",
    "appId": "com.saybackend.nextjs-electronJ",
    "asarUnpack": [
      "node_modules/next",
      "node_modules/@img",
      "node_modules/sharp",
      "**/*.node",
      "**/*.dll"
    ],
    "files": [
      "build",
      {
        "from": ".next/standalone",
        "to": "app",
        "filter": [
          "!**/.env",
          "!**/package.json"
        ]
      },
      {
        "from": ".next/static",
        "to": "app/.next/static"
      },
      {
        "from": "public",
        "to": "app/public"
      }
    ],
    "extraResources": [
      {
        "from": "front-back-server/front-back-server.exe",
        "to": "front-back-server.exe"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "copyright": "Copyright (c) 2025 Venty"
  }
}
